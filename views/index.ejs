<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Group Goals</title>
    <link rel="stylesheet" href="/styles.css">
  </head>
<body>

  <header>
    <h1 class="page-head">GROUP GOALS</h1>
  </header>
  
  <main>
    <div class="new">

      <form class="adder" action="/" method="POST">
        <label for="n-heading">
          <input type="text" id="n-heading" name="heading" placeholder="Heading">
        </label>
        <label for="n-text">
          <textarea type="text" id="n-text" name="text" placeholder="Your text here"></textarea>
        </label>
        <label for="n-author">
          <input type="text" id="n-author" name="author" placeholder="Your Name">
        </label>
        <div class="btpar">
          <button type="submit" id="pro">Save</button>
          <button type="submit" id="clr">Clear</button>
        </div>
      </form>
    </div>
    <div class="saved">
      <% for(let i=0; i<main.length; i++){ %>
        <div class="n-note">
          <span title="Heading" class="n-heading"><%=main[i].heading%></span>
          <hr style="height: 1px; border: none; background-color: white;">
          <p title="Content" class="n-text"><%=main[i].text%></p>
          <span title="Author" class="n-author"><%=main[i].author%></span>
        </div>
        <%}%>
    </div>
  </main>
  <section class="free">
    <div class="add">
      <span title="Add">
        &plus;
      </span>
    </div>
  </section>
  <footer>

  </footer>
  <script src="/jquery-3.5.1.min.js" type="text/javascript"></script>
  <script>
    $(function(){
      $("div.add > span").click(()=>{
        $("form.adder").slideToggle(250);
        $("html, body").animate({ scrollTop: 0 }, "slow");
      });
      $("button#clr").click(()=>{
        $("form.adder").slideUp(250);
      });

      $("button#clr").on("click", function(e){
        e.preventDefault();
        $("input").map(function(e){
          return this.value = "";
        });
        $("textarea")[0].value = "";
      });
      $("p.n-text").tooltip();
      $("span.n-author").tooltip();
      $("span.n-heading").tooltip();

    });

    
  </script>
</body>
</html>